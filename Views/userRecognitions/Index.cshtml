@model IEnumerable<CentricProject_Team10.Models.userRecognition>

@{
    ViewBag.Title = "Recognition Index";
}

<h2>Recognition Index</h2>

<p>
    @Html.ActionLink("Recognize a Colleague", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CoreValues.valueName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserData.fullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.recognitionComment)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.CoreValues.valueName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.UserData.fullName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.recognitionComment)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.recognitionID }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.recognitionID })
    </td>
    <style>
        tr:nth-child(even) {
            background-color: whitesmoke;
        }

        tr:nth-child(odd) {
            background-color: snow;
        }
    </style>
</tr>
}

</table>
